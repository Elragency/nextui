---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";
import { getRelativeLocaleUrl } from 'astro:i18n';

// Import necessary images
import blueprints from "@images/blueprints-image.avif";
import personWorking from "@images/person-working.avif";
import beforeAfter from "@images/before-after.avif";
import constructionWorkers from "@images/construction-workers.avif";
import aerialView from "@images/aerial-view.avif";
import usingTools from "@images/using-tools.avif";
import progressBuilding from "@images/progress-building.avif";
import underConstruction from "@images/under-construction.avif";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    "isRightSection": true,
    "title": "Notre Histoire",
    "subTitle": "Fondée en 2022, Agence ELR est née de la passion pour la technologie et le marketing digital. Notre mission est de fournir des solutions innovantes en automatisation, création de sites web et marketing digital pour aider les entreprises à atteindre leur plein potentiel en ligne. Depuis notre création, nous avons travaillé avec des entreprises de toutes tailles pour transformer leur présence numérique.",
    "single": false,
    "imgOne": blueprints,
    "imgOneAlt": "Plans et tablette numérique avec des plans de construction.",
    "imgTwo": personWorking,
    "imgTwoAlt": "Personne travaillant au bureau"
  },
  {
    "isRightSection": false,
    "title": "Une Fondations Solide",
    "subTitle": "Bien que jeune, notre entreprise repose sur des bases solides de connaissances approfondies et de passion pour la technologie. Nos fondateurs possèdent des années d'expérience dans leurs domaines respectifs, ce qui nous permet d'offrir des services de qualité supérieure en automatisation des processus, création de sites web modernes et stratégies de marketing digital.",
    "img": beforeAfter,
    "imgAlt": "Chantier de construction avant et après",
    "btnExists": true,
    "btnTitle": "Faisons affaires!",
    "btnURL": "/contact"
  },
  {
    "isRightSection": true,
    "title": "Agence ELR Aujourd'hui",
    "subTitle": "Avec une équipe dynamique et dédiée, nous avons rapidement gagné la confiance de nos clients grâce à notre approche personnalisée et à nos solutions innovantes. Nous sommes fiers de nos réalisations et de notre croissance rapide, tout en restant engagés à fournir des services exceptionnels qui répondent aux besoins uniques de chaque client.",
    "single": false,
    "imgOne": constructionWorkers,
    "imgOneAlt": "Ouvriers du bâtiment orchestrant un projet",
    "imgTwo": aerialView,
    "imgTwoAlt": "Vue aérienne d'une construction gérée"
  },
  {
    "isRightSection": false,
    "title": "Une Mission Qui Nous Rassemble",
    "subTitle": "Notre mission est d'offrir une expérience client unique et inégalée dans le domaine du marketing digital et de la technologie. Nous visons à accompagner chaque entreprise avec des solutions personnalisées qui maximisent leur présence en ligne, optimisent leurs processus internes et augmentent leur efficacité globale.",
    "img": usingTools,
    "imgAlt": "Homme en gilet orange et noir portant un casque blanc tenant un outil électrique jaune et noir"
  },
  {
    "isRightSection": true,
    "title": "Une Vision Qui Va Loin",
    "subTitle": "Nous aspirons à devenir le partenaire de choix pour toutes les entreprises cherchant à innover et à se développer dans le monde numérique. Notre vision est de continuer à évoluer avec les dernières technologies et tendances du marché pour offrir des services qui dépassent les attentes de nos clients, tout en maintenant des valeurs d'excellence, de transparence et de respect.",
    "single": false,
    "imgOne": progressBuilding,
    "imgOneAlt": "Structure de bâtiment en cours de construction",
    "imgTwo": underConstruction,
    "imgTwoAlt": "Bâtiment marron et gris en construction",
    "btnExists": true,
    "btnTitle": "Faisons affaires!",
    "btnURL": "/contact"
  }
];
---

<MainLayout
  title="Qui sommes-nous | Agence ELR | Passionnés par Votre Réussite"
  lang="fr"
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://elragency.com/agence-elr",
    url: "https://elragency.com/agence-elr",
    name: "Expert Consultation Services | Agence ELR",
    description:
      "Alliant l'expertise à votre vision, l'Agence ELR fournit un service exceptionnel et des solutions complètes dans l'industrie de l'automatisation des processus d'affaires, de la consultation à l'achèvement du projet.",
    isPartOf: {
      "@type": "WebSite",
      url: "https://elragency.com",
      name: "Agence ELR",
      description:
        "Agence ELR propose des outils de haut niveau et des services de  experts pour répondre à tous les besoins de votre compagnie.",
    },
    inLanguage: "fr-CAN",
  }}
>
  <!--MainSection is the introductory section of the page, it also contains a CTA button-->
  <MainSection
  title="Unir l'Expertise à Votre Vision"
  subTitle="Chez Agence ELR, nous sommes fiers de fournir des solutions complètes et innovantes en automatisation, création de sites web et marketing digital. Notre équipe dévouée est là pour soutenir votre projet de sa conception à son achèvement, en offrant des services personnalisés et adaptés à vos besoins spécifiques."
  btnExists={true}
  btnTitle="Planifier une Consultation"
  btnURL={getRelativeLocaleUrl("fr", "/contact")}
/>
  <!-- RightSection and LeftSection contain details about various services along with pertinent imagery.
  They alternate for variety in design.
  The 'btnExists' property is used to toggle the display of a button in these sections.
  When btnExists={true}, a button is displayed.
  This can be used to link to more detailed information or related resources.
  RightSection can also conditionally render one or two images based on the 'single' property.
  If 'single' is true, it displays one image, otherwise it displays two.
  -->
  {
    articles.map((article) => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
  <!--FeaturesStats section showcases essential stats valuable to users-->
  <FeaturesStats
    title="L'Agence ELR en chiffres"
    subTitle="Notre engagement envers la qualité et la fiabilité est évident dans chaque projet que nous entreprenons. À l'Agence ELR, nous nous engageons à fournir des services de premier plan dans l'industrie qui garantissent que vos projets web sont conçus pour durer."
    mainStatTitle="125+"
    mainStatSubTitle="Client qui nous ont fait confiance"
    stats={[
      {
        stat: "$0.6 Millions",
        description: "Revenus générés depuis notre création",
      },
      {
        stat: "88+",
        description: "Sites internet réalisés",
      },
      {
        stat: "2 Années",
        description: "De loyaux services",
      },
    ]}
  />
</MainLayout>
